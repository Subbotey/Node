{{>header}}
<div class="container">
  <div class="py-2 text-center">
    <h1>{{title}}</h1>
  </div>
  <div class="container">
    <div class="text-center mb-4">
      <form class="card" method="POST" action="{{route_url}}/delete/{{data.id}}"
        enctype="application/x-www-form-urlencoded">
        <p class="card-text">Название: {{data.name}}</p>
        <p class="card-text">Цена: {{data.price}}</p>
        <p class="card-text">Описание: {{data.desc}}</p>
        <p>
          <input class="btn btn-primary" type="submit" name="submit" id="submit" value="Удалить" />
          <a href="{{route_url}}/" class="btn btn-secondary">Отмена</a>
        </p>
      </form>
    </div>
  </div>
  {{>footer}}